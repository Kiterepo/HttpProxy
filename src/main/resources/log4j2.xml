<?xml version="1.0" encoding="UTF-8"?>

<!-- Don't forget to set system property
-Dlog4j2.contextSelector=org.apache.logging.log4j.core.async.AsyncLoggerContextSelector
     to make all loggers asynchronous. -->

<Configuration status="WARN">

    <properties>
        <property name="MSG_LOG_HOME">/data/var/log/proxy</property>
    </properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <!-- Async Loggers will auto-flush in batches, so switch off immediateFlush. -->
        <RollingRandomAccessFile name="log" fileName="${MSG_LOG_HOME}/proxy.log" immediateFlush="false"
                                 append="true" filePattern="${MSG_LOG_HOME}/proxy.log-%d{MM-dd-yyyy}-%i">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</Pattern>
            </PatternLayout>
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
        </RollingRandomAccessFile>
        <RollingRandomAccessFile name="span" fileName="${MSG_LOG_HOME}/span.log" immediateFlush="false"
                                 append="true" filePattern="${MSG_LOG_HOME}/span.log-%d{MM-dd-yyyy}-%i">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</Pattern>
            </PatternLayout>
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
        </RollingRandomAccessFile>
        <RollingRandomAccessFile name="web" fileName="${MSG_LOG_HOME}/web.log" immediateFlush="false"
                                 append="true" filePattern="${MSG_LOG_HOME}/web.log-%d{MM-dd-yyyy}-%i">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</Pattern>
            </PatternLayout>
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <logger name="web" level="info"
                additivity="false">
            <appender-ref ref="web"/>
        </logger>
        <logger name="com.arloor.forwardproxy.trace.LogSpanExporter" level="info"
                additivity="false">
            <appender-ref ref="span"/>
        </logger>
        <Root level="info" includeLocation="false">
            <AppenderRef ref="log"/>
        </Root>
    </Loggers>
</Configuration>